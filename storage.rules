rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidFileSize() {
      return request.resource.size <= 26214400; // 25MB max
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidAttachmentType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*') ||
             request.resource.contentType.matches('text/.*') ||
             request.resource.contentType.matches('application/zip');
    }
    
    // Email attachments
    match /attachments/{userId}/{emailId}/{fileName} {
      // Users can read their own attachments
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Users can upload attachments to their own emails
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidFileSize() && 
                     isValidAttachmentType();
      
      // Users can delete their own attachments
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // User avatars
    match /avatars/{userId}/{fileName} {
      allow read: if isAuthenticated();
      
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidImageType() &&
                     request.resource.size <= 5242880; // 5MB max for avatars
      
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Company logos (admin only)
    match /company/{fileName} {
      allow read: if true; // Public read
      allow write: if false; // Only via admin SDK
    }
  }
}
